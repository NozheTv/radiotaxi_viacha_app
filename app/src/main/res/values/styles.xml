<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Fondo general de pantallas -->
    <style name="AppBackground">
        <item name="android:background">@color/background_gray</item>
    </style>

    <style name="RoundedImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">150dp</item>
    </style>
    <!-- Estilo para los EditText -->
    <style name="CustomEditText">
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>

    <!-- Estilo para los botones -->
    <style name="CustomButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/teal</item> <!-- con android: -->
        <item name="android:textColor">@color/white</item>      <!-- con android: -->
        <item name="cornerRadius">20dp</item>                   <!-- sin android: -->
        <item name="android:elevation">4dp</item>             <!-- con android: -->
        <item name="android:textStyle">bold</item>             <!-- con android: -->
        <item name="android:padding">10dp</item>               <!-- con android: -->
    </style>

</resources>
